<resources>
    <!-- Base application theme. -->
    <style name="Theme.HEARTHApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/melocoton</item>
        <item name="android:navigationBarColor">@color/bottom_bar_color_1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HEARTHApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HEARTHApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HEARTHApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>