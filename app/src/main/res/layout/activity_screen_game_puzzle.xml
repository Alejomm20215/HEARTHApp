<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/puzle_background"
    android:layout_height="match_parent"
    tools:context=".puzzles.ScreenGamePuzzle">

    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/button_game_bg"
        android:padding="6dp"
        android:text="@string/back_tit"
        android:textColor="#E9E5F8"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionsButtonPuzzle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/home_title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@color/violet_clear"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/PuzzleName"
        android:textColor="#03093A"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circular_shape_1"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/instructionsButtonPuzzle"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/button_game_bg"
        android:padding="6dp"
        android:text="@string/Instructions"
        android:textColor="#E9E5F8"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playButtonPuzzle"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/button_game_bg"
        android:padding="6dp"
        android:text="@string/learn"
        android:textColor="#E9E5F8"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>